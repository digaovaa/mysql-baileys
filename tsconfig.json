{
	"compilerOptions": {
		"target": "ES2018",
		"module": "commonjs",
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"outDir": "./lib",
		"rootDir": "./src",
		"strict": false,
		"noImplicitAny": false,
		"strictNullChecks": false,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true
	},
	"exclude": [
		"node_modules",
		"lib"
	],
	"include": [
		"src/**/*"
	]
}